<div class="calendar">

	<pre>
        {{ dump(calendar) }}
    </pre>


</div>

<div
	class="border rounded-xl border-gray-200 bg-white p-3 w-[300px]">

	{# CALENDAR CONTROL #}
	<div class="flex justify-between space-x-4 items-center p-3">
		<a href="/?date={{calendar.lastMonth}}" class="text-xs inline-block bg-slate-500 text-white w-5 h-5 rounded-full text-center leading-5">
			<i class="fas fa-chevron-left"></i>
		</a>
		<h3 class="text-xl text-slate-600 font-light">
			{{ calendar.date|date('F') }}
			{{calendar.date|date('Y')}}
		</h3>
		<a href="/?date={{calendar.nextMonth}}" class="text-xs inline-block bg-slate-500 text-white w-5 h-5 rounded-full text-center leading-5">
			<i class="fas fa-chevron-right"></i>
		</a>
	</div>


	{% set dateClass = "text-sm text-center h-10 leading-10" %}

	{# MINI CALENDAR #}
	<div class="grid grid-cols-7 text-center gap-x-0 gap-y-2">

		<div class="text-sm text-gray-400">L</div>
		<div class="text-sm text-gray-400">M</div>
		<div class="text-sm text-gray-400">M</div>
		<div class="text-sm text-gray-400">J</div>
		<div class="text-sm text-gray-400">V</div>
		<div class="text-sm text-gray-400">S</div>
		<div class="text-sm text-gray-400">D</div>

		<div class="col-span-7 border-b py-2"></div>

		{% for day in calendar.calendar %}
			<div class="{{dateClass}} {{day.lastMonth or day.nextMonth ? 'text-gray-300' : ''}}">{{day.date|date('d')}}</div>
		{% endfor %}
	</div>
</div>
